@using Microsoft.AspNetCore.SignalR.Client

<div class="sending-box">
    <fluent-text-field class="sending-box__input" placeholder="message" @bind="Message"></fluent-text-field>
    <fluent-button class="sending-box__button" appearance="accent" @onclick="SendAsync">Send</fluent-button>
</div>

@code {
    protected string Message { get; set; }

    [Parameter]
    public HubConnection  connection { get; set; }

    [Parameter]
    public string Target { get; set; }

    protected async virtual Task SendAsync()
    {
        await connection.SendAsync(Target,Message);
    }
}
