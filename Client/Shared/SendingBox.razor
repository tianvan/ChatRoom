<div class="sending-box">
    <fluent-text-field class="sending-box__input" placeholder="message" @bind-value="Message" @bind-value:event="oninput"></fluent-text-field>
    <fluent-button class="sending-box__button" appearance="accent" disabled="@(!string.IsNullOrWhiteSpace(Message))" @onclick="SubmitAsync">Send</fluent-button>
</div>

@code {

    [Parameter]
    public EventCallback<string> OnSubmitted { get; set; }

    protected string Message { get; set; }

    protected async Task SubmitAsync()
    {
      await  OnSubmitted.InvokeAsync(Message);
    }
}
